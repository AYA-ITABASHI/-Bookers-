<div class="book-list">
 <h1 class="name">Books</h1>

 <div>
 <%= flash[:notice] %>
 </div>

 <table>
 <thead>
 <tr>
  <th class="title">Title</th>
  <th class="title2">Body</th>
 </tr>
 </thead>

 <tbody>
　<% Book.all.each do |book| %>
 　<tr>
    <td><span class="space"><%= book.title %></span></td>
    <td><span class="space"><%= book.body %></td></span>

    <td><span class="space"><%= link_to "Show", book_path(book.id) %></td></span>

    <td><span class="space"><%= link_to "Edit", edit_book_path(book.id) %></td></span>

    <td><span class="space"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td></span>
   </tr>
　</tbody>
 <% end %>
 </table>
</div>


<h2>New Book</h2>
<%= form_with model:@book, url: '/books', method: :post do |f| %>
<% if @book.errors.any? %>
　<%= @book.errors.count %>errors prohibited this book from being saved:
　<ul>
　 <% @book.errors.full_messages.each do |message| %>
　  <li><%= message %></li>
　 <% end %>
　</ul>
<% end %>

 <h5>Title</h5>
 <%= f.text_field :title %>
 <h5>Body</h5>
 <%= f.text_area :body %>
<div class="save-link">
 <%= f.submit "Create Book" %>
</div>
<% end %>



